@article{schroeder_five_2020,
  title = {Five Decades of Radioglaciology},
  author = {Schroeder, Dustin M. and Bingham, Robert G. and Blankenship, Donald D. and Christianson, Knut and Eisen, Olaf and Flowers, Gwenn E. and Karlsson, Nanna B. and Koutnik, Michelle R. and Paden, John D. and Siegert, Martin J.},
  year = {2020},
